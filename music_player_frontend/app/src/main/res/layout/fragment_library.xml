<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorSurface"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/section_playlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/library_playlists"
            android:textStyle="bold"
            android:textColor="@color/colorOnSurface"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/placeholder_playlists"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="@string/placeholder_playlists" />

        <TextView
            android:id="@+id/section_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/library_saved"
            android:textStyle="bold"
            android:textColor="@color/colorOnSurface"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/placeholder_saved"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="@string/placeholder_saved" />
    </LinearLayout>
</ScrollView>
